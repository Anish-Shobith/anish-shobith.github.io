<section class="mx-24 pb-10">
  <ul class="pt-4 divide-y divide-slate-300 dark:divide-slate-700">
    {
      infos.map((info, index) => (
        <li class="animate-leftslide" style={`animation-delay: ${index * 0.2}s;`}>
